extends layout

block content
  main
    aside  
      h1 Search Bar
      form
        input(type='text', name='search', placeholder='Search..')
    article 
      each book in books
        .book
          img(src=`${book.image}`, alt=`${book.title}`, width='75', height='100')  
          h3= book.title
          h4= book.author
          book.id
