extends ../layout

block content
  .addBook
    form(method='post', action='/books')
      div.textBox
        input.inputAll(type='text', name='title', placeholder='Title')
      div.textBox
        input.inputAll(type='text', name='author', placeholder='Author')
      div.textBox
        input.inputAll(type='text', name='description', placeholder='Description')
      div.textBox
        input.inputAll(type='text', name='image', placeholder='Image URL')
      div.textBox
        input.inputAll(type='text', name='published', placeholder='Published Date mm-dd-yy')
      div.textBox
        input.submit(type='submit', value='Submit')

